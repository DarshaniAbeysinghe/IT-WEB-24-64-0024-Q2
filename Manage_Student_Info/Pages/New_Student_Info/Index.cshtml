@page
@model Manage_Student_Info.Pages.New_Student_Info.IndexModel

@{
    ViewData["Title"] = "Student Information";
}

<style>
    body {
        background-color: #f2f2f2; 
        font-family: 'Arial', sans-serif; 
        color: #333; 
    }

    h1 {
        color: #007bff; 
        text-align: center; 
        margin-bottom: 20px; 
    }

    .table {
        background-color: #41B3A2; 
        border-radius: 5px; 
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); 
        margin: auto; 
        width: 80%; 
    }

    th {
        background-color: #007bff; 
        color: white; 
        text-align: left; 
    }

    

    a {
        color: #007bff;
        text-decoration: none; 
    }

        a:hover {
            text-decoration: underline; 
        }

    .create-link {
        display: block; 
        text-align: center; 
        margin-bottom: 20px; 
        font-weight: bold; 
        color: #007bff; 
    }
</style>

<h1>Student Information</h1>

<p>
    <a class="create-link" asp-page="Create">Create New Student</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Add_New_Student_Info[0].First_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Add_New_Student_Info[0].Last_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Add_New_Student_Info[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Add_New_Student_Info[0].City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Add_New_Student_Info)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.First_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Last_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
